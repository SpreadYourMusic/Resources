<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sergrovet.spreadyourmusictests">
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
    Permite obligar a que la pantalla esté encendida durante la reproducción del audio.
    No lo veo necesario por el momento
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    -->

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_media_play"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_media_play"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Player">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>